<!--login.wxml-->
<view class="container">
  <view class="login-box">
    <view class="logo">
      <text class="logo-text">NEXUS</text>
      <text class="logo-subtitle">智能语音交互平台</text>
    </view>
    
    <view class="form">
      <view class="input-group">
        <text class="label">用户名</text>
        <input 
          class="input" 
          placeholder="请输入用户名"
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>
      
      <view class="input-group">
        <text class="label">密码</text>
        <view class="password-input">
          <input 
            class="input" 
            type="{{showPassword ? 'text' : 'password'}}"
            placeholder="请输入密码"
            value="{{password}}"
            bindinput="onPasswordInput"
          />
          <view class="toggle-btn" bindtap="togglePassword">
            <text class="icon">{{showPassword ? '👁' : '👁'}}</text>
          </view>
        </view>
      </view>
      
      <button 
        class="login-btn" 
        bindtap="onLogin"
        disabled="{{isLoading || !username || !password}}"
        loading="{{isLoading}}"
      >
        {{isLoading ? '登录中...' : '登录'}}
      </button>
    </view>
  </view>
</view>

