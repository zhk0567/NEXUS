/* login.wxss */
.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.logo {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-text {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.logo-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.input {
  width: 100%;
  padding: 24rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 1.5;
  border: 1rpx solid #e0e0e0;
  color: #333333;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.input::placeholder {
  color: #999999;
  font-size: 32rpx;
}

.password-input {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
}

.password-input .input {
  padding-right: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

.toggle-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background-color: transparent;
}

.toggle-btn .icon {
  font-size: 40rpx;
}

.login-btn {
  margin-top: 40rpx;
  padding: 28rpx;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.login-btn[disabled] {
  background-color: #cccccc;
  color: #999999;
}

