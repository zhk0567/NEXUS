/* settings.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.settings-list {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.user-section {
  padding: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.logout-btn {
  padding: 16rpx 32rpx;
  background-color: #ff4444;
  color: #ffffff;
  border-radius: 8rpx;
  border: none;
  font-size: 28rpx;
}

.setting-item {
  padding: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.setting-item:last-child {
  border-bottom: none;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 30rpx;
  font-weight: 500;
}

radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 30rpx;
  color: #666666;
}

.server-input-group {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.server-input {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 30rpx;
  border: 1rpx solid #e0e0e0;
}

.save-btn {
  padding: 20rpx 40rpx;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 8rpx;
  border: none;
  font-size: 28rpx;
}

