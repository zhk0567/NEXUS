/* history.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}

.conversation-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.conversation-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.conversation-item.active {
  border: 2rpx solid #07c160;
}

.conversation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.conversation-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.conversation-time {
  font-size: 26rpx;
  color: #999999;
}

.conversation-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  padding: 16rpx 32rpx;
  background-color: #ff4444;
  color: #ffffff;
  border-radius: 8rpx;
  border: none;
  font-size: 28rpx;
}

